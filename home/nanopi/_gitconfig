[core]
    editor = vim
[diff]
    external = difft
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    tool = vimdiff
[init]
    defaultBranch = main
[color]
    ui = true
[alias]
    br = branch
    ci = commit
    co = checkout
    d = diff
    di = diff --ignore-all-space
    dt = difftool
    lo = log --graph -n 50 --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset)%C(dim white) %an%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold yellow)%d%C(reset)' --all
    st = status
